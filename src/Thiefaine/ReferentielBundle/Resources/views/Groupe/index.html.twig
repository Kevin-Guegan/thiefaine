{% block content %}
    <div class="content">
        <h3>Gestion des groupes</h3>
        <table class="records_list table table-hover">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Nom <span class="glyphicon cheveron-down" title="Trier par nom"></span></th>
                    <th>Groupe <span class="glyphicon cheveron-down" title="Trier par groupe"></span></th>
                    <th>Utilisateurs <span class="glyphicon cheveron-down" title="Trier par utilisateurs"></span></th>
                    <th>Alertes <span class="glyphicon cheveron-down" title="Trier par alertes"></span></th>
                    <th>Informations <span class="glyphicon cheveron-down" title="Trier par informations"></span></th>
                    <th>Conseils <span class="glyphicon cheveron-down" title="Trier par conseils"></span></th>
                    <th>Zones <span class="glyphicon cheveron-down" title="Trier par conseils"></span></th>
                </tr>
            </thead>
            <tbody>

                {% for group in groups %}
                    <tr>
                        <td data-element="{{ group.getName() }}">
                            <a href="{{ path('fos_user_group_edit', {'groupName': group.getName()} ) }}">
                                <span class="glyphicon glyphicon-pencil" title="Modifier"></span>
                            </a>                            
                            <a href="{{ path('fos_user_group_delete', {'groupName': group.getName()} ) }}">
                                <span class="glyphicon glyphicon-remove removeElement" title="Supprimer"></span>
                            </a>
                        </td>
                        <td>{{ group.getName() }}</td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_GROUP') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_USER') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_ALERTE') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_INFORMATION') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_CONSEIL') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                        <td>
                        {% if group.hasRole('ROLE_MANAGE_ZONE') %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            -
                        {% endif %}
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
