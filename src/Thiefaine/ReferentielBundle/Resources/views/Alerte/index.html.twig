{% extends 'ThiefaineReferentielBundle:Nav:leftnav.html.twig' %}

{% block content %}
        <div class="content">

                <h3>Gestion des alertes</h3>

                <table class="table table-hover">

                    <tr>
                        <th>Actions</th>
                        <th>Titre <span class="glyphicon cheveron-down" title="Trier par titre"></span></th>
                        <th>Date création <span class="glyphicon cheveron-down" title="Trier par date de création"></span></th>
                        <th>Date de validité <span class="glyphicon cheveron-down" title="Trier par date de validité"></span></th>
                    </tr>

                    {% for alerte in alertes %}
                        <tr>
                            <td>
                 
                                    <a href="{{ path('alerte_edit', { 'id': alerte.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" title="Modifier"></span>
                                    </a>
                                    <a href="{{ path('alerte_delete', {'id': alerte.id}) }}" onclick="return confirm('Etes vous sûr de vouloir supprimer cette alerte ?')">
                                        <span class="glyphicon glyphicon-remove" title="Supprimer"></span>
                                    </a>
                            </td>
                            <td>{{ alerte.message.titre }}</td>
                            <td>{{ alerte.message.datecreation|date("d/m/Y") }}</td>
                            <td>{{ alerte.message.datevalidite is empty ? "" :alerte.message.datevalidite|date("d/m/Y") }}</td>
                        </tr>
                    {% endfor %}

                </table>
        </div>
{% endblock %}