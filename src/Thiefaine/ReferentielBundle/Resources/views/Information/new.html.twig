{% extends 'ThiefaineUserBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/js/ckeditor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/js/datepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/lib/bootstrap_filestyle/src/bootstrap-filestyle.js') }}"></script>
{% endblock %}


{% block content %}

	{% set flashMessages = app.session.flashbag.get('notice') %}

    <div class="content col-md-9">

        <h3>Création d'une information</h1>

        {% if flashMessages|length > 0 %}
        	{% if zones == null %}
        		<p>
			    	<div class="alert alert-warning" role="alert" style="margin-top: 20px">
						{% for flashMessage in flashMessages %}
						    <div class="flash-notice">
						        {{ flashMessage }}
						    </div>
						{% endfor %}
					</div>
				</p>
        	{% else %}
        		<p>
			    	<div class="alert alert-danger" role="alert">
						{% for flashMessage in flashMessages %}
						    <div class="flash-notice">
						        {{ flashMessage }}
						    </div>
						{% endfor %}
					</div>
				</p>
        	{% endif %}
		{% endif %}


		{% if zones != null %}

		{{ form_start(form,{'attr': {'class' : 'form-horizontal'}} ) }}

			{{ form_errors(form) }}

			<div class="form-group">

				<p>
					{{ form_label(form.message.titre) }}
					{{ form_widget(form.message.titre) }}
				</p>
				<p>
					{{ form_label(form.message.urlphoto) }}
					{{ form_widget(form.message.urlphoto) }}
				</p>
				<p>
					{{ form_label(form.message.attachement) }}
					{{ form_widget(form.message.attachement) }}
				</p>
				<p>
					{{ form_label(form.message.urllien) }}
					{{ form_widget(form.message.urllien) }}
				</p>
				<p>
					{{ form_label(form.zone) }}
					{{ form_widget(form.zone) }}
				</p>
				<p class="dateElement">
					{{ form_label(form.message.datevalidite) }}
					{{ form_widget(form.message.datevalidite) }}
				</p>
				<p>
					{{ form_label(form.message.message) }}
					{{ form_widget(form.message.message) }}
				</p>
				
				<p class="list-form-control">
					<label>Notifications</label>
					<table class="table table-hover">
						<tr>
							<td>
					  			{{ form_label(form.alerte) }}
					  		</td>
					  		<td style="text-align: right;">
					  			{{ form_widget(form.alerte) }}
					  		</td>
					  	</tr>
					</table>
				</p>
				<p>	
		      		<button class="btn btn-primary" type="submit">Créer l'information</button>
					<a class="btn btn-default" href={{ path('information') }}>Annuler</a>
		  	  	</p>	

			</div>

		{{ form_end(form) }}

		{% endif %}

    </div>


{% endblock %}