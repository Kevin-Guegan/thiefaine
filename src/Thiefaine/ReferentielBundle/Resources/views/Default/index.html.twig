
<html>
	<head>
		<title>
			{% block title %}
				Thiefaine
			{% endblock %}
		</title>

		<link rel="SHORTCUT ICON" href="{{ asset('bundles/thiefainereferentiel/images/logo.png') }}" />

		<meta http-equiv="content-type" content="text/html; charset=utf-8" />

		{% stylesheets 
			'bundles/thiefainereferentiel/lib/bootstrap/css/bootstrap.min.css'
			'bundles/thiefainereferentiel/lib/jquery-ui/css/redmond/jquery-ui-1.10.4.custom.min.css'
			'bundles/thiefainereferentiel/css/style.css'
			'bundles/thiefainereferentiel/css/datatable.css' filter='cssrewrite' %}
		    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
		{% endstylesheets %}

		{% javascripts 
			'bundles/thiefainereferentiel/js/function.js'
			'bundles/thiefainereferentiel/lib/datepicker-fr.js'
			'bundles/thiefainereferentiel/lib/jquery-ui/js/jquery-ui-1.10.4.custom.min.js'
			'bundles/thiefainereferentiel/lib/ckeditor/ckeditor.js'
			'bundles/thiefainereferentiel/lib/bootstrap/js/bootstrap.min.js'
			'bundles/thiefainereferentiel/lib/jquery-2.1.0.js' %}
		    <script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
	</head>
	<body>
		
			<nav class="navbar navbar-default navbar-top" role="navigation" style="margin-bottom: inherit;">
				<div class="container" style="padding-top:5px;">
					<div class="nav navbar-nav navbar-left">
					{% image 'bundles/thiefainereferentiel/images/logo_header.png' %}
				        <img style="width:40px;" src="{{ asset_url }}">
				    {% endimage %}
					  <b>Thiefaine</b>
					</div>
					<div class="nav navbar-nav navbar-right">
						{% block header %}
						{% endblock %}
					</div>
				</div>
			</nav>
		
		<div class="container">
			{% block leftbar %}
			{% endblock %}

			{% block content %}
			{% endblock %}
		</div>
		
		{% block footer %}
			<nav style="margin-bottom: inherit; margin-top: 20px;" class="navbar navbar-default navbar-bottom" role="navigation">
				<div class="container" style="padding-top:10px; font-size:10px;">
					<div class="nav navbar-nav navbar-left">
					{% image 'bundles/thiefainereferentiel/images/logo_header.png' %}
				        <img style="width:10px;" src="{{ asset_url }}">
				    {% endimage %}
	          		  Application Thiefaine - 2014
			        </div>
			        <div class="nav navbar-nav navbar-right" style="text-align: right;">
					  Powered by L3 - 
					  <a href="http://www.imie-ecole-informatique.fr/">IMIE Rennes</a> - 
					  <a href="mailto:theraud.mickael@hotmail.fr">M.THERAUD</a>, 
					  <a href="mailto:christopher.louet@gmail.com">C.LOUET</a>, 
					  <a href="mailto:y.bescher.leblanc@gmail.com">Y.BESCHER-LEBLANC</a>.
			        </div>
				</div>
			</nav>
		{% endblock %}

		{% block modal %}
			<!-- Modal de visualisation informations / conseil-->
			<div class="modal fade" id="viewInfoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        <h4 class="modal-title" id="myModalLabel"></h4>
			      </div>
			      <div class="modal-body" id="myModalBody">
			      	
			      </div>
			      <div class="modal-footer">
			      	<button type="button" class="btn btn-primary" data-dismiss="modal">Valider</button>
			        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
			      </div>
			    </div>
			  </div>
			</div>
		{% endblock %}
	</body>
</html>