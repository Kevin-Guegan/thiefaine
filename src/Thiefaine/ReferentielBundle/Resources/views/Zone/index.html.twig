{% extends 'ThiefaineUserBundle::layout.html.twig' %}

{% block content %}
    <div class="content">
        <h3>Gestion des zones</h3>
        <table class="records_list table table-hover">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Active</th>
                    <th>Nom</th>
                    <th>Cr√©ateur</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('zone_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" title="Modifier"></span></a>
                    </td>
                    <td>
                    {% if entity.actif == 1 %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                    </td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.utilisateurweb }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}