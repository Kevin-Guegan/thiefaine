{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/js/ckeditor.js') }}"></script>
{% endblock %}

{% block content %}
	<div class="content">
		<h3>Création d'un utilisateur</h3>

		{{ form_start(form,{'attr': {'class' : 'form-horizontal'}} ) }}

			<div class="form-group">
				<p>
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom) }}
				</p>
				<p>
					{{ form_label(form.prenom) }}
					{{ form_widget(form.prenom) }}
				</p>
			    <p>
					{{ form_label(form.username) }}
					{{ form_widget(form.username) }}
				</p>
				<p>
					{{ form_label (form.plainPassword.first) }}
					{{ form_widget (form.plainPassword.first) }}
				</p>
				<p>
					{{ form_label (form.plainPassword.second) }}
					{{ form_widget (form.plainPassword.second) }}
				</p>
				<p>
					{{ form_label(form.groups) }}
					{{ form_widget(form.groups) }}
				</p>
				<p>
					{{ form_label(form.email) }}
					{{ form_widget(form.email) }}
				</p>
			  	<p>
					{{ form_label(form.infos) }}
					{{ form_widget(form.infos) }}
				</p>
		      	<p>	
		      		<button class="btn btn-primary" type="submit">Créer l'utilisateur</button>
					<a class="btn btn-default" href={{ path('utilisateurweb_list') }}>Annuler</a>
		  	  	</p>
		    </div>

		{{ form_end(form) }}

		{% for flashMessage in app.session.flashbag.get('notice') %}
		    <div class="flash-notice">
		        {{ flashMessage }}
		    </div>
		{% endfor %}

	</div>

{% endblock %}

