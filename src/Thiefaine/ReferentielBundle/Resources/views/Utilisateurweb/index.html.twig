{% extends 'ThiefaineUserBundle::layout.html.twig' %}

{% block content %}
    <div class="content col-md-9">
        <h3>Gestion des utilisateurs</h3>
        <table class="records_list table table-hover">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Login</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Groupe</th>
                    <th>Email</th>
                    <th>Infos</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <a href="{{ path('utilisateurweb_edit', { 'id': user.id }) }}">
                                <span class="glyphicon glyphicon-pencil" title="Modifier"></span>
                            </a>

                            {% set messageDelete %}
                            return confirm('Attention cette action va supprimer le nom de cette utilisateur sur tous les conseils, informations et zones créés par celui-ci.\nEtes vous sûr de vouloir supprimer l\'utilisateur {{ user.username }} ?');
                            {% endset %}


                            {% if user.hasRole('ROLE_SUPER_ADMIN') == false %}
                            <a href="{{ path('utilisateurweb_delete', {'id': user.id}) }}" onclick="{{ messageDelete }}">
                                <span class="glyphicon glyphicon-remove" title="Supprimer"></span>
                            </a>
                            {% endif %}
                        </td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>
                            {% for group in user.groups %}
                            {{ group.name }}
                            {% endfor %}
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.infos| raw }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}