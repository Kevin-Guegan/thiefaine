{% extends 'ThiefaineUserBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/js/ckeditor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/js/datepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/thiefainereferentiel/lib/bootstrap_filestyle/src/bootstrap-filestyle.js') }}"></script>
{% endblock %}

{% block content %}

	{% set flashMessages = app.session.flashbag.get('notice') %}

    <div class="content col-md-9">
        
        <h3>Création d'un conseil</h1>

         {% if flashMessages|length > 0 %}
        	{% if show == false %}
        		<p>
			    	<div class="alert alert-warning" role="alert" style="margin-top: 20px">
						{% for flashMessage in flashMessages %}
						    <div class="flash-notice">
						        {{ flashMessage }}
						    </div>
						{% endfor %}
					</div>
				</p>
        	{% else %}
        		<p>
			    	<div class="alert alert-danger" role="alert">
						{% for flashMessage in flashMessages %}
						    <div class="flash-notice">
						        {{ flashMessage }}
						    </div>
						{% endfor %}
					</div>
				</p>
        	{% endif %}
		{% endif %}

		{% if show == true %}

		{{ form_start(form,{'attr': {'class' : 'form-horizontal'}} ) }}

			{{ form_errors(form) }}

			<div class="form-group">

				<p>
					{{ form_label(form.titre) }} *
					{{ form_widget(form.titre) }}
				</p>
				<p>
					{{ form_label(form.categories) }}
					{{ form_widget(form.categories) }}
				</p>
				<p>
					{{ form_label(form.urlphoto) }}
					{{ form_widget(form.urlphoto) }}
				</p>
				<p>
					{{ form_label(form.attachement) }}
					{{ form_widget(form.attachement) }}
				</p>
				<p>
					{{ form_label(form.urllien) }}
					{{ form_widget(form.urllien) }}
				</p>
				<p class="dateElement">
					{{ form_label(form.datevalidite) }}
					{{ form_widget(form.datevalidite) }}
				</p>
				<p>
					{{ form_label(form.message) }} *
					{{ form_widget(form.message) }}
				</p>
				<p>	
		      		<button class="btn btn-primary" type="submit">Créer le conseil</button>
					<a class="btn btn-default" href={{ path('conseil') }}>Annuler</a>
		  	  	</p>

			</div>

		{{ form_end(form) }}

		{% endif %}

    </div>



{% endblock %}
