{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Message list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Message</th>
                <th>Datecreation</th>
                <th>Datemiseajour</th>
                <th>Datevalidite</th>
                <th>Compteurlecture</th>
                <th>Urlphoto</th>
                <th>Urllien</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.message }}</td>
                <td>{% if entity.datecreation %}{{ entity.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datemiseajour %}{{ entity.datemiseajour|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datevalidite %}{{ entity.datevalidite|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.compteurlecture }}</td>
                <td>{{ entity.urlphoto }}</td>
                <td>{{ entity.urllien }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('message_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('message_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('message_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
